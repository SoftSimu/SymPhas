{
  "definitions": {
    "DT": 0.01,
    "WIDTH": 1.0,
    "GRID_SIZE": 128,
    "SAVE_INTERVAL": 1000
  },
  "simulation": {
    "dimension": 2,
    "time_steps": [
      {
        "dt": "${DT}",
        "iterations": 1000
      }
    ],
    "save": {
      "type": "DEFAULT",
      "interval": "${SAVE_INTERVAL}",
      "save_initial": true
    },
    "stencil": {
      "order": 2,
      "ptl": 9,
      "ptg": 6,
      "ptb": 13
    },
    "solver_variation": 0
  },
  "model": {
    "name": "MODELH_FE",
    "fields": [
      {
        "index": 0,
        "domain": "main_domain",
        "initial_condition": {
          "type": "UNIFORM",
          "parameters": [ -1, 1 ]
        }
      },
      {
        "index": 1,
        "domain": "main_domain",
        "initial_condition": [
          {
            "type": "UNIFORM",
            "axis": "T",
            "parameters": [ -1, 1 ]
          },
          {
            "type": "CONSTANT",
            "axis": "R",
            "parameters": [ 0.5 ]
          }
        ]
      }
    ],
    "coefficients": {
      "c1": 1.0,
      "c2": 1.0,
      "c3": 1.0
    }
  },
  "intervals": {
    "unit_interval": {
      "points": "${GRID_SIZE}",
      "width": "${WIDTH}"
    }
  },
  "domains": {
    "main_domain": {
      "dimension": 2,
      "intervals": {
        "x": "unit_interval",
        "y": "unit_interval"
      },
      "boundaries": {
        "x": {
          "left": { "type": "PERIODIC" },
          "right": { "type": "PERIODIC" }
        },
        "y": {
          "left": { "type": "PERIODIC" },
          "right": { "type": "PERIODIC" }
        }
      }
    }
  },
  "output": {
    "directory": "./simulations"
  }
}