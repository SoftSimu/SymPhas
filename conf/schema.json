{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SymPhas Configuration Schema",
  "description": "Schema for SymPhas phase-field simulation configuration files",
  "type": "object",
  "properties": {
    "definitions": {
      "description": "Reusable definitions that can be referenced using ${key} syntax",
      "type": "object",
      "additionalProperties": true
    },
    "title": {
      "description": "Title for the simulation",
      "type": "string"
    },
    "simulation": {
      "type": "object",
      "properties": {
        "dimension": {
          "description": "Spatial dimension of the simulation (1, 2, or 3)",
          "$ref": "#/definitions/dimensionOrDefinitionRef"
        },
        "time_step": {
          "description": "Single time step configuration",
          "$ref": "#/definitions/PositiveNumberOrDefinitionRef"
        },
        "time": {
          "description": "Total simulation time (used with time_step)",
          "type": "number",
          "exclusiveMinimum": 0
        },
        "time_steps": {
          "description": "Multiple time step configurations",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "dt": {
                "description": "Time step size",
                "$ref": "#/definitions/PositiveNumberOrDefinitionRef"
              },
              "time": {
                "description": "Duration for this time step",
                "$ref": "#/definitions/PositiveNumberOrDefinitionRef"
              },
              "iterations": {
                "description": "Number of iterations for this time step",
                "$ref": "#/definitions/PositiveIntegerOrDefinitionRef"
              }
            },
            "required": [ "dt" ],
            "oneOf": [
              { "required": [ "time" ] },
              { "required": [ "iterations" ] }
            ]
          },
          "minItems": 1
        },
        "stencil": {
          "description": "Stencil configuration for numerical methods",
          "type": "object",
          "properties": {
            "order": {
              "description": "Accuracy order of the stencil",
              "type": "integer",
              "minimum": 1
            },
            "ptl": {
              "description": "Number of points for Laplacian stencil",
              "type": "integer",
              "minimum": 1
            },
            "ptg": {
              "description": "Number of points for gradient-Laplacian stencil",
              "type": "integer",
              "minimum": 1
            },
            "ptb": {
              "description": "Number of points for bilaplacian stencil",
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "solver_variation": {
          "description": "Solver type variation identifier",
          "type": "integer"
        },
        "save": {
          "description": "Output save configuration",
          "type": "object",
          "properties": {
            "interval": {
              "description": "Save interval (base value)",
              "$ref": "#/definitions/PositiveNumberOrDefinitionRef"
            },
            "indices": {
              "description": "Specific iteration indices to save (LIST type)",
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0
              }
            },
            "type": {
              "description": "Save type",
              "type": "string",
              "enum": [ "DEFAULT", "COLUMN", "XDR", "GRID" ]
            },
            "save_initial": {
              "description": "Whether to save initial conditions",
              "type": "boolean"
            }
          }
        }
      }
    },
    "model": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Model name identifier",
          "type": "string"
        },
        "coefficients": {
          "description": "Model coefficients",
          "oneOf": [
            {
              "description": "Array of coefficient values",
              "type": "array",
              "items": { "type": "number" }
            },
            {
              "description": "Named coefficients (c1, c2, etc.)",
              "type": "object",
              "patternProperties": {
                "^c\\d+$": { "type": "number" }
              },
              "additionalProperties": { "type": "number" }
            }
          ]
        },
        "coefficients_file": {
          "description": "Path to external coefficients file",
          "type": "string"
        },
        "fields": {
          "description": "Mapping of field indices to domain names",
          "type": "array",
          "items": {
            "$ref": "#/definitions/field"
          }
        }
      }
    },
    "intervals": {
      "additionalProperties": {
        "properties": {
          "start": {
            "description": "Start of the interval",
            "$ref": "#/definitions/numberOrDefinitionRef"
          },
          "end": {
            "description": "End of the interval",
            "$ref": "#/definitions/numberOrDefinitionRef"
          },
          "width": {
            "description": "Width of the interval",
            "$ref": "#/definitions/PositiveNumberOrDefinitionRef"
          },
          "points": {
            "description": "Number of discrete points in the interval",
            "$ref": "#/definitions/integerOrDefinitionRef"
          }
        },
        "additionalProperties": false
      }
    },
    "initial_conditions": {
      "description": "Initial conditions configurations that can be referenced in the model",
      "type": "object",
      "additionalItems": {
        "oneOf": [
          { "$ref": "#/definitions/initial_condition" },
          {
            "type": "array",
            "items": { "$ref": "#/definitions/initial_condition" }
          }
        ]
      }
    },
    "domains": {
      "description": "Domain configurations that can be referenced in the model",
      "type": "object",
      "additionalItems": {
        "type": "object",
        "properties": {
          "boundaries": {
            "description": "Boundary conditions by axis",
            "type": "object",
            "properties": {
              "all": {
                "$ref": "#/definitions/boundary_condition"
              }
            },
            "patternProperties": {
              "^[xyzXYZ]$": {
                "type": "object",
                "properties": {
                  "left": {
                    "$ref": "#/definitions/boundary_condition"
                  },
                  "right": {
                    "$ref": "#/definitions/boundary_condition"
                  }
                }
              }
            }
          },
          "intervals": {
            "description": "Intervals defining each axis",
            "type": "object",
            "patternProperties": {
              "^[xyzXYZ]$": {
                "type": "string"
              }
            }
          }
        },
        "additionalProperties": false,
        "required": [ "boundaries", "intervals" ]
      }
    },
      "names": {
        "description": "Names for output fields",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "output": {
        "description": "Output directory configuration",
        "type": "object",
        "properties": {
          "directory": {
            "description": "Root output directory",
            "type": "string"
          },
          "title": {
            "description": "Title for the output directory",
            "type": "string"
          }
        }
      },
      "parameters": {
        "description": "Raw parameters for the simulation",
        "type": "object",
        "additionalProperties": true
      }
    },
  "definitions": {
    "numberOrDefinitionRef": {
      "oneOf": [
        { "type": "number" },
        {
          "type": "string",
          "pattern": "^\\$\\{[^}]+\\}$"
        }
      ]
    },
    "PositiveNumberOrDefinitionRef": {
      "oneOf": [
        {
          "type": "number",
          "exclusiveMinimum": 0
        },
        {
          "type": "string",
          "pattern": "^\\$\\{[^}]+\\}$"
        }
      ]
    },
    "PositiveIntegerOrDefinitionRef": {
      "oneOf": [
        {
          "type": "number",
          "exclusiveMinimum": 1
        },
        {
          "type": "string",
          "pattern": "^\\$\\{[^}]+\\}$"
        }
      ]
    },
    "ZeroPositiveIntegerOrDefinitionRef": {
      "oneOf": [
        {
          "type": "number",
          "minimum": 0
        },
        {
          "type": "string",
          "pattern": "^\\$\\{[^}]+\\}$"
        }
      ]
    },
    "dimensionOrDefinitionRef": {
      "oneOf": [
        {
          "type": "integer",
          "minimum": 1,
          "maximum": 3
        },
        {
          "type": "string",
          "pattern": "^\\$\\{[^}]+\\}$"
        }
      ]
    },
    "integerOrDefinitionRef": {
      "oneOf": [
        { "type": "integer" },
        {
          "type": "string",
          "pattern": "^\\$\\{[^}]+\\}$"
        }
      ]
    },
    "field": {
      "type": "object",
      "properties": {
        "domain": {
          "description": "The chosen domain for this field",
          "type": "string"
        },
        "initial_condition": {
          "description": "Initial condition specifications",
          "oneOf": [
            { "type": "string" },
            { "$ref": "#/definitions/initial_condition" },
            {
              "type": "array",
              "items": { "$ref": "#/definitions/initial_condition" }
            }
          ]
        },
        "index": {
          "description": "Field index this domain applies to",
          "type": "integer",
          "minimum": 0
        },
        "count": {
          "description": "Number of order parameter fields for the type chosen by the index",
          "$ref": "#/definitions/ZeroPositiveIntegerOrDefinitionRef"
        },
        "modifier": {
          "description": "Modifier instructing how the multiple fields are saved to a single file",
          "type": "string"
        }
      },
      "required": [ "domain", "initial_condition", "index" ],
      "additionalProperties": false
    },
    "initial_condition": {
      "type": "object",
      "properties": {
        "type": {
          "description": "Initial condition type",
          "type": "string"
        },
        "tags": {
          "description": "Initial condition type",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "axis": {
          "description": "Axis to apply initial condition (default: NONE for all)",
          "type": "string",
          "enum": [ "X", "Y", "Z", "R", "T", "S", "C", "I", "NONE" ]
        },
        "parameters": {
          "description": "Parameters for the initial condition",
          "type": "array",
          "items": {
            "$ref": "#/definitions/numberOrDefinitionRef"
          }
        },
        "file": {
          "description": "File path for FILE type",
          "type": "string"
        },
        "index": {
          "description": "Index in file for FILE type",
          "type": "integer",
          "minimum": 0
        },
        "expression": {
          "description": "Expression name for EXPRESSION type",
          "type": "string"
        },
        "coefficients": {
          "description": "Coefficients for EXPRESSION type",
          "type": "array",
          "items": { "type": "number" }
        }
      },
      "required": [ "type" ],
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "FILE" } }
          },
          "then": {
            "required": [ "file" ]
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "EXPRESSION" } }
          },
          "then": {
            "required": [ "expression" ]
          }
        }
      ]
    },
    "boundary_condition": {
      "type": "object",
      "properties": {
        "type": {
          "description": "Boundary condition type",
          "type": "string",
          "enum": [
            "PERIODIC",
            "OPEN",
            "DEFAULT",
            "NONE"
          ]
        },
        "tags": {
          "description": "Boundary modifiers (up to 2)",
          "type": "array",
          "items": {
            "type": "string"
          },
          "maxItems": 2
        },
        "parameters": {
          "description": "Parameters for the boundary condition",
          "type": "array",
          "items": { "type": "number" }
        }
      }
    }
  }
}
