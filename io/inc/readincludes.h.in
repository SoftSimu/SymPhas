#cmakedefine USING_XDR

#include "readgp.h"
#include "readgpc.h"

#ifdef USING_XDR
#include "readxdr.h"

#define XDRR_CASE(FUNCTION) \
case WriterType::XDR: \
	return symphas::io::xdr:: FUNCTION; \
	break;

#else
#define XDRR_CASE(FUNCTION)
#endif


#define SWITCH_IO_READ(FUNCTION) \
switch (params::writer) \
{ \
case WriterType::GNU: \
	return symphas::io::gp:: FUNCTION; \
	break; \
case WriterType::COLUMN: \
	return symphas::io::gpc:: FUNCTION; \
	break; \
XDRR_CASE(FUNCTION) \
default: \
	return BAD_INDEX; \
}

